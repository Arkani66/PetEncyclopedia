<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Cat.CatDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/kitten_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/kitten_detail_button_return"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
        <ImageView
                android:id="@+id/kitten_detail_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/Beige"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/kitten_detail_name" />
        <Button
                android:id="@+id/kitten_detail_button_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_return_cat"
                android:textFontWeight="4"
                android:layout_marginBottom="40dp"
                android:shadowRadius="2.2"
                android:radius="14.5sp"
                app:layout_constraintTop_toBottomOf="@id/kitten_detail_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/kitten_detail_image"/>

        <TextureView
                android:id="@+id/kitten_detail_mlayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/kitten_detail_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/kitten_detail_life_span"
                app:layout_constraintVertical_bias="0.1"/>

        <TextView
                android:id="@+id/kitten_detail_weigth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment"
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/kitten_detail_height"
                app:layout_constraintBottom_toBottomOf="@+id/kitten_detail_mlayout" />

        <TextView
                android:id="@+id/kitten_detail_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment"
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout"
                app:layout_constraintLeft_toRightOf="@id/kitten_detail_weigth"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/kitten_detail_mlayout" />

        <TextureView
                android:id="@+id/kitten_detail_mlayout2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/kitten_detail_mlayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/kitten_detail_mlayout3"
                app:layout_constraintVertical_bias="0.1"/>

        <TextView
                android:id="@+id/kitten_detail_life_span"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/kitten_detail_temperament" />

        <TextView
                android:id="@+id/kitten_detail_temperament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/kitten_detail_life_span"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/kitten_detail_origin" />

        <TextView
                android:id="@+id/kitten_detail_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/kitten_detail_temperament"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/kitten_detail_mlayout2" />

        <TextureView
                android:id="@+id/kitten_detail_mlayout3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/kitten_detail_origin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/kitten_detail_mlayout4" />

        <TextView
                android:id="@+id/kitten_detail_indoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indoor :"
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/kitten_detail_indoor_bar"
                app:layout_constraintBottom_toBottomOf="@+id/kitten_detail_mlayout3" />

        <ImageView
                android:id="@+id/kitten_detail_indoor_bar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@color/Beige"
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout3"
                app:layout_constraintLeft_toRightOf="@id/kitten_detail_indoor"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/kitten_detail_mlayout3" />

        <TextureView
                android:id="@+id/kitten_detail_mlayout4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/kitten_detail_mlayout3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/kitten_detail_mlayout6" />

        <TextView
                android:id="@+id/kitten_detail_affection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Affection levels : "
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/kitten_detail_affection_bar"
                app:layout_constraintBottom_toBottomOf="@+id/kitten_detail_mlayout4" />

        <ImageView
                android:id="@+id/kitten_detail_affection_bar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@color/Beige"
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout4"
                app:layout_constraintLeft_toRightOf="@id/kitten_detail_affection"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/kitten_detail_mlayout4" />

        <TextureView
                android:id="@+id/kitten_detail_mlayout6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/kitten_detail_mlayout4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/kitten_detail_mlayout7"
                app:layout_constraintVertical_bias="0.1"/>

        <TextView
                android:id="@+id/kitten_detail_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dog friendly : "
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/kitten_detail_dog_bar"
                app:layout_constraintBottom_toBottomOf="@+id/kitten_detail_mlayout6" />

        <ImageView
                android:id="@+id/kitten_detail_dog_bar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@color/Beige"
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout6"
                app:layout_constraintLeft_toRightOf="@id/kitten_detail_dog"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/kitten_detail_mlayout6" />

        <TextureView
                android:id="@+id/kitten_detail_mlayout7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/kitten_detail_mlayout6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/kitten_detail_mlayoutbottom"
                app:layout_constraintVertical_bias="0.2"/>

        <TextView
                android:id="@+id/kitten_detail_vocalisation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vocalisation : "
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/kitten_detail_vocalisation_bar"
                app:layout_constraintBottom_toBottomOf="@+id/kitten_detail_mlayout7" />

        <ImageView
                android:id="@+id/kitten_detail_vocalisation_bar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@color/Beige"
                app:layout_constraintTop_toTopOf="@id/kitten_detail_mlayout7"
                app:layout_constraintLeft_toRightOf="@id/kitten_detail_vocalisation"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/kitten_detail_mlayout7" />

        <ImageView
                android:id="@+id/kitten_detail_mlayoutbottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/Beige"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/kitten_detail_vocalisation"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
