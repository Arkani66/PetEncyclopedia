<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <ImageView
            android:id="@+id/doggo_item_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_zone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/doggo_item_image"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/Beige"
            app:layout_constraintBottom_toBottomOf="@id/doggo_item_back"
            app:layout_constraintTop_toTopOf="@+id/doggo_item_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/doggo_name"/>
    <TextView
            android:id="@+id/doggo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@id/doggo_item_back"
            app:layout_constraintTop_toTopOf="@id/doggo_item_back"
            app:layout_constraintLeft_toRightOf="@id/doggo_item_image"
            app:layout_constraintRight_toRightOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>